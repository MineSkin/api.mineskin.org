{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es2018",
    "outDir": "dist",
    "skipLibCheck": true,
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "express",
      "express-fileupload",
      "body-parser",
      "morgan",
      "tunnel-ssh"
    ],
    "baseUrl": "src"
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
